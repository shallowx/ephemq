<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.meteor</groupId>
  <artifactId>meteor-bom</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <description>Sonatype helps open source projects to set up Maven repositories on https://oss.sonatype.org/</description>
  <url>http://nexus.sonatype.org/oss-repository-hosting.html/meteor-bom</url>
  <organization>
    <name>shallowx</name>
    <url>https://github.com/shallowx</url>
  </organization>
  <licenses>
    <license>
      <name>MIT License</name>
      <url>https://www.mit-license.org/</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <scm>
    <connection>scm:git@github.com:shallowx/meteor.git</connection>
    <developerConnection>scm:git@github.com:shallowx/meteor.git</developerConnection>
    <url>http://svn.sonatype.org/spice/tags/oss-parent-7/meteor-bom</url>
  </scm>
  <issueManagement>
    <system>github</system>
    <url>https://github.com/shallowx/meteor/issues</url>
  </issueManagement>
  <distributionManagement>
    <repository>
      <id>sonatype-nexus-staging</id>
      <name>Nexus Release Repository</name>
      <url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
    </repository>
    <snapshotRepository>
      <id>sonatype-nexus-snapshots</id>
      <name>Sonatype Nexus Snapshots</name>
      <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
    </snapshotRepository>
  </distributionManagement>
  <properties>
    <flatten.version>1.2.7</flatten.version>
    <sonatypeOssDistMgmtSnapshotsUrl>https://oss.sonatype.org/content/repositories/snapshots/</sonatypeOssDistMgmtSnapshotsUrl>
    <tcnative.version>2.0.61.Final</tcnative.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.meteor</groupId>
        <artifactId>meteor-client</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.meteor</groupId>
        <artifactId>meteor-broker</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.meteor</groupId>
        <artifactId>meteor-common</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.meteor</groupId>
        <artifactId>meteor-remoting</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.meteor</groupId>
        <artifactId>meteor-mertics</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.meteor</groupId>
        <artifactId>meteor-proxy</artifactId>
        <version>${project.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <repositories>
    <repository>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <id>sonatype-nexus-snapshots</id>
      <name>Sonatype Nexus Snapshots</name>
      <url>https://oss.sonatype.org/content/repositories/snapshots</url>
    </repository>
  </repositories>
</project>
