<?xml version="1.0" encoding="UTF-8" ?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <inceptionYear>2022</inceptionYear>

  <groupId>org.ostara</groupId>
  <artifactId>ostara</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <modules>
    <module>broker</module>
    <module>client</module>
    <module>remote</module>
    <module>distribution</module>
    <module>example</module>
    <module>common</module>
    <module>metrics</module>
    <module>cli-tools</module>
  </modules>

  <scm>
    <connection>scm:git@github.com:shallow-rs/Ostara.git</connection>
    <developerConnection>scm:git@github.com:shallow-rs/Ostara.git</developerConnection>
    <url>git@github.com:shallow-rs/ostaraMQ.git</url>
    <tag>ostara-all-${version}</tag>
  </scm>

  <licenses>
    <license>
      <name>MIT License</name>
      <url>https://www.mit-license.org/</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <organization>
    <name>Ostara</name>
    <url>https://github.com/shallow-rs</url>
  </organization>

  <issueManagement>
    <system>github</system>
    <url>https://github.com/shallow-rs/shallow/issues</url>
  </issueManagement>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.version>17</maven.compiler.version>
    <maven.compiler.source>17</maven.compiler.source>
    <maven.compiler.target>17</maven.compiler.target>
    <maven.test.skip>false</maven.test.skip>
    <maven.javadoc.skip>true</maven.javadoc.skip>
    <java.version>17</java.version>
    <junit.version>4.13.2</junit.version>
    <protobuf.version>3.21.8</protobuf.version>
    <shallow.version>1.0.0-SNAPSHOT</shallow.version>
    <netty.version>4.1.77.Final</netty.version>
    <fastuyil.core.version>8.5.8</fastuyil.core.version>
    <caffine.version>3.1.1</caffine.version>
    <gson.version>2.9.0</gson.version>
    <guava.version>30.1-jre</guava.version>
    <jsr.version>3.0.2</jsr.version>
    <kotlin.version>1.7.21</kotlin.version>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.ostara</groupId>
        <artifactId>client</artifactId>
        <version>${shallow.version}</version>
      </dependency>
      <dependency>
        <groupId>org.ostara</groupId>
        <artifactId>broker</artifactId>
        <version>${shallow.version}</version>
      </dependency>
      <dependency>
        <groupId>org.ostara</groupId>
        <artifactId>common</artifactId>
        <version>${shallow.version}</version>
      </dependency>
      <dependency>
        <groupId>org.ostara</groupId>
        <artifactId>remote</artifactId>
        <version>${shallow.version}</version>
      </dependency>
      <dependency>
        <groupId>org.ostara</groupId>
        <artifactId>mertics</artifactId>
        <version>${shallow.version}</version>
      </dependency>
      <dependency>
        <groupId>com.google.protobuf</groupId>
        <artifactId>protobuf-java</artifactId>
        <version>${protobuf.version}</version>
      </dependency>
      <dependency>
        <groupId>junit</groupId>
        <artifactId>junit</artifactId>
        <version>${junit.version}</version>
        <scope>test</scope>
      </dependency>
      <dependency>
        <groupId>it.unimi.dsi</groupId>
        <artifactId>fastutil-core</artifactId>
        <version>${fastuyil.core.version}</version>
      </dependency>
      <dependency>
        <groupId>io.netty</groupId>
        <artifactId>netty-all</artifactId>
        <version>${netty.version}</version>
      </dependency>
      <dependency>
        <groupId>com.google.code.gson</groupId>
        <artifactId>gson</artifactId>
        <version>${gson.version}</version>
      </dependency>
      <dependency>
        <groupId>com.github.ben-manes.caffeine</groupId>
        <artifactId>caffeine</artifactId>
        <version>${caffine.version}</version>
      </dependency>
      <dependency>
        <groupId>com.google.guava</groupId>
        <artifactId>guava</artifactId>
        <version>${guava.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <dependencies>
    <dependency>
      <groupId>com.google.code.findbugs</groupId>
      <artifactId>jsr305</artifactId>
      <version>${jsr.version}</version>
    </dependency>
    <dependency>
      <groupId>org.jetbrains.kotlin</groupId>
      <artifactId>kotlin-stdlib-jdk8</artifactId>
      <version>${kotlin.version}</version>
    </dependency>
    <dependency>
      <groupId>org.jetbrains.kotlin</groupId>
      <artifactId>kotlin-test</artifactId>
      <version>${kotlin.version}</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <configuration>
          <tagBase>${project.artifactId}-${project.version}</tagBase>
          <tagNameFormat>v@{project.version}</tagNameFormat>
          <autoVersionSubmodules>true</autoVersionSubmodules>
          <generateReleasePoms>false</generateReleasePoms>
          <arguments>-DskipTests</arguments>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.jetbrains.kotlin</groupId>
        <artifactId>kotlin-maven-plugin</artifactId>
        <version>${kotlin.version}</version>
        <executions>
          <execution>
            <id>compile</id>
            <phase>compile</phase>
            <goals>
              <goal>compile</goal>
            </goals>
          </execution>
          <execution>
            <id>test-compile</id>
            <phase>test-compile</phase>
            <goals>
              <goal>test-compile</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <jvmTarget>1.8</jvmTarget>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>