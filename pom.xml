<?xml version="1.0" encoding="UTF-8" ?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <inceptionYear>2022</inceptionYear>

    <groupId>org.shallow</groupId>
    <artifactId>shallow</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <modules>
        <module>shallow-broker</module>
        <module>shallow-tool</module>
        <module>shallow-client</module>
        <module>shallow-remote</module>
        <module>shallow-benchmark</module>
        <module>shallow-example</module>
        <module>shallow-common</module>
        <module>shallow-nameserver</module>
        <module>shallow-serialization</module>
    </modules>

    <scm>
        <connection>scm:git@github.com:shallow-rs/shallow.git</connection>
        <developerConnection>scm:git@github.com:shallow-rs/shallow.git</developerConnection>
        <url>git@github.com:shallow-rs/shallow.git</url>
        <tag>shallow-all-${version}</tag>
    </scm>

    <licenses>
        <license>
            <name>MIT License</name>
            <url>https://www.mit-license.org/</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <organization>
        <name>Shallow</name>
        <url>https://github.com/shallow-rs</url>
    </organization>

    <issueManagement>
        <system>github</system>
        <url>https://github.com/shallow-rs/shallow/issues</url>
    </issueManagement>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.version>17</maven.compiler.version>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <maven.test.skip>false</maven.test.skip>
        <maven.javadoc.skip>true</maven.javadoc.skip>
        <java.version>17</java.version>
        <junit.version>4.13.2</junit.version>
        <protobuf.version>3.19.4</protobuf.version>
        <shallow.version>1.0.0-SNAPSHOT</shallow.version>
        <netty.version>4.1.77.Final</netty.version>
        <fastuyil.core.version>8.5.8</fastuyil.core.version>
        <gson.version>2.9.0</gson.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.shallow</groupId>
                <artifactId>shallow-client</artifactId>
                <version>${shallow.version}</version>
            </dependency>
            <dependency>
                <groupId>org.shallow</groupId>
                <artifactId>shallow-broker</artifactId>
                <version>${shallow.version}</version>
            </dependency>
            <dependency>
                <groupId>org.shallow</groupId>
                <artifactId>shallow-common</artifactId>
                <version>${shallow.version}</version>
            </dependency>
            <dependency>
                <groupId>org.shallow</groupId>
                <artifactId>shallow-remote</artifactId>
                <version>${shallow.version}</version>
            </dependency>
            <dependency>
                <groupId>org.shallow</groupId>
                <artifactId>shallow-metadata</artifactId>
                <version>${shallow.version}</version>
            </dependency>
            <dependency>
                <groupId>org.shallow</groupId>
                <artifactId>shallow-serialization</artifactId>
                <version>${shallow.version}</version>
            </dependency>
            <dependency>
                <groupId>com.google.protobuf</groupId>
                <artifactId>protobuf-java</artifactId>
                <version>${protobuf.version}</version>
            </dependency>
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>${junit.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>it.unimi.dsi</groupId>
                <artifactId>fastutil-core</artifactId>
                <version>${fastuyil.core.version}</version>
            </dependency>
            <dependency>
                <groupId>io.netty</groupId>
                <artifactId>netty-all</artifactId>
                <version>${netty.version}</version>
            </dependency>
            <dependency>
                <groupId>com.google.code.gson</groupId>
                <artifactId>gson</artifactId>
                <version>${gson.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <dependencies>
        <dependency>
            <groupId>com.google.code.findbugs</groupId>
            <artifactId>jsr305</artifactId>
            <version>3.0.2</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>3.0.0-M6</version>
                <configuration>
                    <tagBase>${project.artifactId}-${project.version}</tagBase>
                    <tagNameFormat>${project.version}</tagNameFormat>
                    <autoVersionSubmodules>true</autoVersionSubmodules>
                    <generateReleasePoms>false</generateReleasePoms>
                    <arguments>-DskipTests</arguments>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>